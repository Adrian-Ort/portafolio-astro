---
import Layout from '../../layouts/Layout.astro';
import BlogCard from '../../components/BlogCard.astro';

const allPosts = [
  {
    title: 'Creando mi Portafolio Web con Astro',
    description: 'Mi experiencia desarrollando un portafolio rápido, moderno y personal con Astro, HTML, CSS y JavaScript.',
    image: '/images/blog/portafolio-astro.webp',
    date: '2025-10-12',
    slug: 'creando-portafolio-con-astro',
  },

];
---

<Layout title="Blog - Your Name">
  <section class="section">
    <div class="container">
      <h1 class="section-title">Blog</h1>
      <p class="section-subtitle">Publicaciones sobre mis avances, proyectos y aprendizajes continuos en desarrollo web y tecnología.</p>
      
      <div class="blog-grid grid grid-3">
        {allPosts.map(post => (
          <BlogCard {...post} />
        ))}
      </div>

      <div class="back-button-container">
        <a href="/#blog" class="btn btn-secondary">Volver</a>
      </div>

    </div>
  </section>
</Layout>

<style>
  .blog-header {
    margin-bottom: 3rem;
  }

  .back-button-container {
    text-align: center;
    margin-top: 3rem;
    padding-top: 2rem;
    border-top: 1px solid var(--border);
  }
</style>