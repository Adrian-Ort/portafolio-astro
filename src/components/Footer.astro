---
const currentYear = new Date().getFullYear();

const socialLinks = [
  { name: 'GitHub', url: 'https://github.com/yourusername', icon: 'üë®‚Äçüíª' },
  { name: 'LinkedIn', url: 'https://linkedin.com/in/yourusername', icon: 'üíº' },
  { name: 'Twitter', url: 'https://twitter.com/yourusername', icon: 'üê¶' },
  { name: 'Email', url: 'mailto:your.email@example.com', icon: 'üìß' },
];
---

<footer class="footer">
  <div class="container footer-content">
    <div class="footer-section">
      <h3>Let's Connect</h3>
      <p>I'm always interested in hearing about new projects and opportunities.</p>
    </div>
    
    <div class="footer-section">
      <h3>Contact</h3>
      <p>your.email@example.com</p>
      <p>+1 (555) 123-4567</p>
    </div>
    
    <div class="footer-section">
      <h3>Follow Me</h3>
      <div class="social-links">
        {socialLinks.map(link => (
          <a href={link.url} target="_blank" rel="noopener" class="social-link" aria-label={link.name}>
            <span>{link.icon}</span>
          </a>
        ))}
      </div>
    </div>
  </div>
  
  <div class="footer-bottom">
    <div class="container">
      <p>&copy; {currentYear} Your Name. Built with Astro.</p>
    </div>
  </div>
</footer>

<style>
  .footer {
    background-color: var(--bg-secondary);
    border-top: 1px solid var(--border);
    padding: 3rem 0 0;
    margin-top: 4rem;
  }
  
  .footer-content {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
    margin-bottom: 2rem;
  }
  
  .footer-section h3 {
    margin-bottom: 1rem;
    color: var(--primary);
  }
  
  .footer-section p {
    color: var(--text-secondary);
    margin-bottom: 0.5rem;
  }
  
  .social-links {
    display: flex;
    gap: 1rem;
    margin-top: 1rem;
  }
  
  .social-link {
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: var(--bg-primary);
    border-radius: 50%;
    transition: all 0.3s;
    font-size: 1.25rem;
  }
  
  .social-link:hover {
    background-color: var(--primary);
    transform: translateY(-3px);
  }
  
  .footer-bottom {
    border-top: 1px solid var(--border);
    padding: 1.5rem 0;
    text-align: center;
  }
  
  .footer-bottom p {
    color: var(--text-secondary);
    font-size: 0.875rem;
  }
</style>