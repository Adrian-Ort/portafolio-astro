---
import { education } from '../data/education.js';
---

<section id="education" class="section" style="background-color: var(--bg-secondary);">
  <div class="container">
    <h2 class="section-title">Educación y Certificaciones</h2>
    <p class="section-subtitle">Mi formación académica y certificaciones profesionales</p>
    
    <div class="education-grid">
      <!-- Columna de Educación -->
      <div class="education-column">
        <h3 class="column-title">
          <i class="fas fa-graduation-cap title-icon"></i>
          Educación
        </h3>
        <div class="timeline">
          {education.degrees.map((item, index) => (
            <div class="timeline-item" data-index={index}>
              <div class="timeline-marker"></div>
              <div class="timeline-content card">
                <span class="timeline-date">{item.date}</span>
                <h4>{item.title}</h4>
                <h5>{item.institution}</h5>
                <p>{item.description}</p>
              </div>
            </div>
          ))}
        </div>
      </div>
      
      <!-- Columna de Certificados -->
      <div class="education-column">
        <h3 class="column-title">
          <i class="fas fa-certificate title-icon"></i>
          Certificados
        </h3>
        <div class="timeline">
          {education.certificates.map((item, index) => (
            <div class="timeline-item" data-index={index}>
              <div class="timeline-marker"></div>
              <div class="timeline-content card">
                <span class="timeline-date">{item.date}</span>
                <h4>{item.title}</h4>
                <h5>{item.institution}</h5>
                <!-- <p>{item.description}</p>-->
                {item.certificate && (
                  <a href={item.certificate} class="certificate-link" target="_blank" rel="noopener">
                    Ver Certificado →
                  </a>
                )}
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .education-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 3rem;
    max-width: 1200px;
    margin: 0 auto;
  }
  
  .education-column {
    position: relative;
  }
  
  .column-title {
    font-size: 1.75rem;
    margin-bottom: 2rem;
    text-align: center;
    color: var(--primary);
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.75rem;
  }
  
  .title-icon {
    font-size: 2rem;
  }
  
  .timeline {
    position: relative;
    padding-left: 2rem;
  }
  
  .timeline::before {
    content: '';
    position: absolute;
    left: 0;
    top: 0;
    bottom: 0;
    width: 2px;
    background-color: var(--primary);
  }
  
  .timeline-item {
    position: relative;
    margin-bottom: 2rem;
    padding-left: 2rem;
  }
  
  .timeline-marker {
    position: absolute;
    left: -0.5rem;
    top: 0;
    width: 1rem;
    height: 1rem;
    border-radius: 50%;
    background-color: var(--primary);
    border: 3px solid var(--bg-secondary);
    z-index: 1;
  }
  
  .timeline-content {
    padding: 1.5rem;
  }
  
  .timeline-date {
    display: inline-block;
    padding: 0.25rem 0.75rem;
    background-color: var(--primary);
    color: white;
    border-radius: 1rem;
    font-size: 0.875rem;
    font-weight: 600;
    margin-bottom: 0.75rem;
  }
  
  .timeline-content h4 {
    margin-bottom: 0.5rem;
    font-size: 1.125rem;
    color: var(--text-primary);
  }
  
  .timeline-content h5 {
    color: var(--text-secondary);
    font-weight: 600;
    margin-bottom: 0.75rem;
    font-size: 1rem;
  }
  
  .timeline-content p {
    color: var(--text-secondary);
    margin-bottom: 1rem;
    font-size: 0.95rem;
    line-height: 1.6;
  }
  
  .certificate-link {
    color: var(--primary);
    font-weight: 600;
    transition: transform 0.3s;
    display: inline-block;
  }
  
  .certificate-link:hover {
    transform: translateX(4px);
  }
  
  /* Responsive */
  @media (max-width: 968px) {
    .education-grid {
      grid-template-columns: 1fr;
      gap: 4rem;
    }
  }
  
  @media (max-width: 768px) {
    .timeline {
      padding-left: 1.5rem;
    }
    
    .timeline-item {
      padding-left: 1.5rem;
    }
    
    .column-title {
      font-size: 1.5rem;
    }
  }
</style>